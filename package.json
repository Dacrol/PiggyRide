{
  "name": "PiggyRide",
  "version": "0.0.0",
  "description": "Piggies for everyone",
  "main": "server.js",
  "repository": "git@github.com:Shahmineh/PiggyRide.git",
  "author": "Shahmineh",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "gulp default && node server.js",
    "debug": "node --inspect server.js",
    "nodemon": "nodemon --config nodemon.json exec \"npm run debug\"",
    "sync": "browser-sync start --port 3001 --proxy localhost:3000 --no-online --no-reload-on-restart --files \"www, !**/src/*, !**/*.map, !**/*.json\"",
    "sync-no-open": "browser-sync start --port 3001 --proxy localhost:3000 --no-online --no-reload-on-restart --no-open --files \"www, !**/src/*, !**/*.map, !**/*.json\"",
    "eslint": "eslint **/*.js",
    "htmlhint": "htmlhint --config .htmlhintrc www/**/*.{htm,html}",
    "stylelint": "stylelint www/src/**/*.scss",
    "lint": "concurrently -s all \"npm run eslint\" \"npm run htmlhint\" \"npm run stylelint\"",
    "test": "npm run lint",
    "compile": "gulp default",
    "watch": "gulp watch",
    "live": "gulp default && concurrently --kill-others \"npm run nodemon\" \"npm run sync\"",
    "all": "gulp default && concurrently --kill-others \"npm run nodemon\" \"gulp watch\" \"npm run sync\"",
    "all-retry": "gulp default && concurrently --allow-restart --restart-after 5000 --kill-others \"npm run nodemon\" \"gulp watch\" \"npm run sync\"",
    "all-no": "gulp default && concurrently --kill-others \"npm run nodemon\" \"gulp watch\" \"npm run sync-no-open\"",
    "autofix": "echo \"Attempting to fix JS & SCSS errors...\" && eslint **/*.js --fix && stylelint www/src/**/*.scss --fix",
    "init": "git submodule init && git submodule update"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "bootstrap": "^4.0.0",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.2",
    "jquery": "^3.3.1",
    "jquery-ui": "^1.12.1",
    "moment": "^2.21.0",
    "mongoose": "^5.0.9",
    "popper.js": "^1.12.9",
    "qs": "^6.5.1",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.5",
    "startbootstrap-agency": "^4.0.0-beta",
    "tempusdominus-bootstrap-4": "^5.0.0-alpha17",
    "weekend-spa": "next"
  },
  "devDependencies": {
    "@types/bootstrap": "^4.0.0",
    "@types/gulp": "^4.0.5",
    "@types/jquery": "^3.3.0",
    "@types/jqueryui": "^1.12.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browser-sync": "^2.23.6",
    "browserify": "^16.1.1",
    "concurrently": "^3.5.1",
    "enforce-gitflow-branches": ">=1.0.6",
    "eslint": "^4.18.2",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.0",
    "htmlhint": "^0.9.13",
    "husky": "^0.15.0-rc.8",
    "nodemon": "^1.17.1",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^2.5.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "babel": {
    "presets": [
      [
        "env"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "node gitenforce.js"
    }
  }
}
